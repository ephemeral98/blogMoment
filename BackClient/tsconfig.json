{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "@page/*": ["./src/pages/*"],
      "@css/*": ["./src/assets/css/*"],
      "@img/*": ["./src/assets/img/*"],
      "@cps/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@api/*": ["./src/api/*"]
    }
  },
  "include": ["src", "./**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "craco.config.js", ], // 这些不需要强行依赖声明文件
  "exclude": ["node_modules/**/*", "./tsconfig.path.json"]
}
