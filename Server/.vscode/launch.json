{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
  {  // node端
    "type": "node",
    "request": "attach",
    "name": "node断点调试",
    "processId": "${command:PickProcess}", // 进程id，在vsCode中选择也行；通过任务管理器中查看也行
    "skipFiles": [
      "<node_internals>/**"
    ]
  },
  {  // 浏览器端
    "type": "chrome",
    "request": "attach",
    "name": "Attach to Chrome",
    "webRoot": "${workspaceRoot}/src",
    "url": "http://localhost:8080/#/",　
    "sourceMaps": true,
    "sourceMapPathOverrides": {
      "webpack:///src/*": "${webRoot}/*"
    }
  }
]
}
